# Database Configuration
DATABASE_URL=postgresql://novadex_user:your_password@localhost:5432/novadex_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=novadex_db
DATABASE_USER=novadex_user
DATABASE_PASSWORD=your_password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# Analytics Configuration
ANALYTICS_DB_URL=postgresql://analytics_user:analytics_password@localhost:5432/novadex_analytics
CLICKHOUSE_URL=http://localhost:8123
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=

# Backup Configuration
BACKUP_S3_BUCKET=novadex-backups
BACKUP_S3_REGION=us-east-1
BACKUP_S3_ACCESS_KEY=your_access_key
BACKUP_S3_SECRET_KEY=your_secret_key
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM

# Environment
NODE_ENV=development
DATABASE_SSL=false
REDIS_SSL=false

# Application Security
JWT_SECRET=your_jwt_secret_key_here
API_SECRET_KEY=your_api_secret_key
ENCRYPTION_KEY=your_32_character_encryption_key

# External Services
COINGECKO_API_KEY=your_coingecko_api_key
JUPITER_API_URL=https://quote-api.jup.ag
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Monitoring & Logging
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn
DATADOG_API_KEY=your_datadog_key
